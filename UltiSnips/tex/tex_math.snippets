\text{${1:${VISUAL}}}
endsnippet

# aligning equations
# ------------------
context "math()"
snippet == " &= (alignment)" A
&=
endsnippet

context "math()"
snippet \= "next line (\\) and &=" A

\\\\ &=
endsnippet

context "math()"
snippet "(\S.*)\\\\&" "\[ to \[ \begin{split}; = to &=" rA
\begin{split}
	`!p if not snip.c:
    	curline = match.group(1)
    	snip.rv = curline.replace("=", "&=", 1)
	`
	\\\\ &= ${1}
\end{split}
endsnippet


# fractions
# ---------
context "math()"
snippet // "frac{}{}" wA
\frac{${1:${VISUAL:n}}}{${2:d}}
endsnippet

context "math()"
post_expand "jump_forward(snip, 1)"
priority 10
snippet 1// "frac{1}{}" wA
\frac{${1:1}}{${2:${VISUAL:d}}}
endsnippet

# eg. 2n// -> \frac{2n}{|}
#     a t^2//2 -> a \frac{t^2}{2}
context "math()"
post_expand "jump_forward(snip, 1)"
priority 2
snippet "([^ \t\)\]\}]+)//" "frac{n}{}" rA
\frac{${1:`!p snip.rv = match.group(1)`}}{${2:d}}
endsnippet



